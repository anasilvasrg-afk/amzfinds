---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const title = "Shop Accessories - Daily Fashion Finds";
const description = "Browse accessories by category. Find bags, shoes, jewelry, and more.";

const categories = ['bags', 'shoes', 'jewelry', 'scarves', 'belts', 'hats', 'eyewear', 'hair', 'seasonal'];
---

<BaseLayout title={title} description={description}>
  <Header showBack={true} backUrl="/" />
  
  <main class="max-w-4xl mx-auto px-4 py-12">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {categories.map(cat => (
        <a 
          href={`/accessories/${cat}`}
          class="aspect-square transition-colors rounded-lg flex items-center justify-center bg-stone-100 hover:bg-stone-200 dark:bg-neutral-800 dark:hover:bg-neutral-700"
        >
          <span class="text-xl font-light uppercase tracking-widest text-stone-700 dark:text-neutral-300">
            {cat}
          </span>
        </a>
      ))}
    </div>
  </main>
</BaseLayout>
